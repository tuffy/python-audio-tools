import audiotools
import optparse,sys,os,os.path

FILENAME_TYPES = ("front_cover","back_cover","leaflet","media","other")

if (__name__ == '__main__'):
    parser = optparse.OptionParser(
        '%prog ' + \
        '[-d directory] ' + \
        '<track>',
        version="Python Audio Tools %s" % (audiotools.VERSION))

    parser.add_option('-d','--dir',
                      action='store',
                      type='string',
                      dest='dir',
                      default='.',
                      help='the directory to store extracted images')

    parser.add_option('-V','--verbose',
                      action='store',
                      dest='verbosity',
                      choices=["quiet","normal","debug"],
                      default="normal",
                      help='the verbosity level to execute at')

    (options,args) = parser.parse_args()

    if (len(args) != 1):
        print >>sys.stderr,"*** You must specify exactly 1 audio file"
        sys.exit(1)

    try:
        audiofile = audiotools.open(args[0])
    except audiotools.UnsupportedFile:
        print >>sys.stderr,"*** You must specify exactly 1 audio file"
        sys.exit(1)

    metadata = audiofile.get_metadata()
    if (metadata is not None):
        image_types = {}
        for image in metadata.images():
            image_types.setdefault(image.type,[]).append(image)

        for (type,images) in image_types.items():
            if (len(images) != 1):
                FILE_TEMPLATE = "%(filename)s%(filenum)2.2d.%(suffix)s"
            else:
                FILE_TEMPLATE = "%(filename)s.%(suffix)s"

            for (i,image) in enumerate(images):
                output_filename = os.path.join(
                    options.dir,
                    FILE_TEMPLATE % {"filename":FILENAME_TYPES[image.type],
                                     "filenum":i + 1,
                                     "suffix":image.suffix()})
                try:
                    f = open(output_filename,"wb")
                    f.write(image.data)
                    f.close()
                    if (options.verbosity != "quiet"):
                        print "* %s" % (output_filename)
                except IOError,msg:
                    print "*** %s" % (str(msg))
                    sys.exit(1)

