import audiotools
import optparse
import sys
import ossaudiodev

if (__name__ == '__main__'):
    parser = optparse.OptionParser(
        "%prog <track 1> [track 2] ...",
        version="Python Audio Tools %s" % (audiotools.VERSION))

    (options,args) = parser.parse_args()

    dev = ossaudiodev.open("w")

    try:
        for audiofile in audiotools.open_files(args,sorted=False):
            pcm = audiofile.to_pcm()
            if (pcm.bits_per_sample == 16):
                fmt = ossaudiodev.AFMT_S16_LE
            elif (pcm.bits_per_sample == 8):
                fmt = ossaudiodev.AFMT_U8
            else:
                import audiotools.pcmconversion

                pcm = audiotools.pcmconversion.PCMConverter(
                    pcm,pcm.sample_rate,pcm.channels,
                    16)
                fmt = ossaudiodev.AFMT_S16_LE

            dev.setparameters(fmt,
                              pcm.channels,
                              pcm.sample_rate)

            audiotools.transfer_data(pcm.read,dev.writeall)

            pcm.close()
    finally:
        dev.close()
